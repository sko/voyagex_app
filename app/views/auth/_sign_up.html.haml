.modal
  .modal-dialog#sign_up_modal
    .modal-header
      %h4#SignUpModal.modal-title #{t('auth.sign_up')}
      %p#sign_up_flash
    .modal-body
      = form_for(resource, as: resource_name, url: registration_path(resource_name), :remote => true, :format => :js, :html => {:class => "form-signup"}) do |f|
        = f.email_field :email, id: 'auth_email', :autofocus => true, :label => false, :class => 'form-control', :placeholder => "Email", autocomplete: "off"
        = f.password_field :password, id: 'auth_password', :label => false, :class => 'form-control', :placeholder => "Password", autocomplete: "off"
        = f.password_field :password_confirmation, id: 'auth_password_confirmation', :label => false, :class => 'form-control', :placeholder => "Confirm password", autocomplete: "off"
